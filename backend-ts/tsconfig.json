{
  "compilerOptions": {
   
    "target": "es2016",                                  
   
    "module": "commonjs",                                
 
    "esModuleInterop": true,                             
    
    "forceConsistentCasingInFileNames": true,            

    "typeRoots": ["./src/@types", "./node_modules/@types"],
    
    "strict": true,                                      

    "skipLibCheck": true                                 
  },
  "exclude": ["node_modules/"],
  "include": ["src/**/*.ts"]
}
